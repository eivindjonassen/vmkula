# vmkula-website Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================
# BACKEND - API Keys (REQUIRED)
# ============================================

# API-Football Key (Free tier: 100 requests/day)
# Get from: https://www.api-football.com/
API_FOOTBALL_KEY=your-api-football-key-here

# Google Gemini AI Key (Free tier: 1500 requests/day)
# Get from: https://aistudio.google.com/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# ============================================
# BACKEND - Firebase/Firestore (REQUIRED)
# ============================================

# Firebase Project ID
FIRESTORE_PROJECT_ID=vmkula

# Path to Firebase Service Account JSON file
# Download from: Firebase Console → Project Settings → Service Accounts → Generate New Private Key
GOOGLE_APPLICATION_CREDENTIALS=/path/to/vmkula-service-account-key.json

# ============================================
# FRONTEND - Firebase Web App Config (PUBLIC)
# ============================================
# Get these values from: Firebase Console → Project Settings → General → Your apps → Web app
# These are public client-side keys (not secrets) - Firebase security is enforced via Firestore Rules

NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-firebase-app-id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your-measurement-id

# ============================================
# OPTIONAL - Backend Configuration
# ============================================

# Cache time-to-live in hours (default: 24)
CACHE_TTL_HOURS=24

# Cache directory (default: cache)
CACHE_DIR=cache

# API-Football delay between requests in seconds (default: 0.5)
API_FOOTBALL_DELAY_SECONDS=0.5

# Max retries for API calls (default: 3)
MAX_RETRIES=3

# Debug mode (default: false)
DEBUG=false
