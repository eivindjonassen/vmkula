# ============================================
# OPTIONAL - Backend Configuration
# ============================================

# Cache time-to-live in hours (default: 24)
CACHE_TTL_HOURS=24

# Cache directory (default: cache)
CACHE_DIR=cache

# API-Football delay between requests in seconds (default: 0.5)
API_FOOTBALL_DELAY_SECONDS=0.5

# Max retries for API calls (default: 3)
MAX_RETRIES=3

# Debug mode (default: false)
DEBUG=false
